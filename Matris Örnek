/* 00001
   00010
   00100
   01000
   10000
   Kullanıcıdan istenen boyuta göre yukarıdaki tipte matrisi bastıran kod. */

#include <iostream>
using namespace std;
int main()
{
	int n;
	cout<<"Boyutu giriniz:";
  cin >> n;
	for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				if (i+j==n-1) {
					cout << "1";
			}
				else
				cout << "0";
		}
		
	cout << endl;
	}

	
}
	

