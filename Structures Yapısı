#include <iostream>
using namespace std;

struct Employee
{
	int id;
	string name;
	string department;
};


int main()
{
	
	Employee employee1 = { 15,"Gurkan","Information Technology" };

	cout << employee1.name << endl;
	cout << employee1.department << endl;
	
	return 0;


}

