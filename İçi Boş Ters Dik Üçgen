#include <iostream>
using namespace std;
int main()
{
	cout << "Boyutu giriniz?";
	int n;
	cin >> n;
	for (int i = 1; i <= n; i++) {
		if (i == 1) {
			for (int k = 1; k <= n; k++)
				cout << "*";
		}
		else if (i == n) {
			for (int b = 1; b < i; b++) {
				cout << " ";
			}
			cout << "*";
		}

		else {
			for (int b = 1; b < i; b++) {
				cout << " ";
			}
			cout << "*";

			for (int j = 1; j <= n - i - 1; j++) {
				cout << " ";

			}
			cout << "*";
		}
		cout << endl;
	}

}
